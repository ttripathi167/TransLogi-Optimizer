<Page x:Class="Group2.Marketplace"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Group2"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1280"
      Title="BuyerDashBoard">

    <Canvas Background="#ffffff">
        <Canvas HorizontalAlignment="Left" Height="800" VerticalAlignment="Top" Width="345" RenderTransformOrigin="-0.26,-4.27" Background="#E9E0E2">
            <Image Source="Images/buyer_panel_icon.png" RenderTransformOrigin="1.706,2.006" Canvas.Left="54" Canvas.Top="46" />
            <Label Content="Buyer Dashboard" Canvas.Left="111" Canvas.Top="46" FontSize="18" Foreground="#FF333333" MouseLeftButtonDown="Label_MouseLeftButtonDown" Cursor="Hand"/>
            <Line xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            X1="250" Y1="403"
            X2="500" Y2="403"
            Stroke="#333333" StrokeDashArray="2, 2"
            StrokeThickness="1" Canvas.Left="-213" Canvas.Top="-298" />

            <Canvas x:Name="buyer_menu1" Height="63" Canvas.Top="133" Width="345" MouseEnter="buyer_menu1_MouseEnter" MouseLeave="buyer_menu1_MouseLeave" Cursor="Hand">
                <Image Source="Images/buyer_directory.png" RenderTransformOrigin="1.706,2.006" Canvas.Left="27" Canvas.Top="16" />
                <Label x:Name="buyer_menu1_label" Content="Marketplace" Canvas.Left="72" Canvas.Top="16" FontSize="18" Foreground="#FF787878" Width="174"/>
            </Canvas>
            <Canvas x:Name="buyer_menu2" Height="63" Canvas.Top="201" Width="345" MouseEnter="buyer_menu2_MouseEnter" MouseLeave="buyer_menu2_MouseLeave">
                <Label x:Name="buyer_menu2_label" Content="Targeting IP Address / Port" Canvas.Left="72" Canvas.Top="14" FontSize="18" Foreground="#FF787878" Width="250"/>
                <Image Source="Images/buyer_directory.png" RenderTransformOrigin="1.706,2.006" Canvas.Left="27" Canvas.Top="14" />
            </Canvas>
            <Canvas x:Name="buyer_menu3" Height="63" Canvas.Top="269" Width="345" MouseEnter="buyer_menu3_MouseEnter" MouseLeave="buyer_menu3_MouseLeave">
                <Image Source="Images/buyer_directory.png" RenderTransformOrigin="1.706,2.006" Canvas.Left="27" Canvas.Top="15" />
                <Label x:Name="buyer_menu3_label" Content="Review Log Files" Canvas.Left="72" Canvas.Top="15" FontSize="18" Foreground="#FF787878" Width="250"/>
            </Canvas>
            <Canvas x:Name="BuyerBackToMain" Height="63" Canvas.Top="699" Width="345" Background="#EF466F" MouseLeftButtonDown="BuyerBackToMain_MouseLeftButtonDown" Cursor="Hand">
                <Label Content="Back to Main" Canvas.Left="122" Canvas.Top="14" Foreground="White" FontSize="20"/>
                <Image Height="32" Canvas.Left="51" Canvas.Top="18" Width="73" Source="door.png"/>
            </Canvas>

        </Canvas>
        <Canvas Height="800" Canvas.Left="350" Width="920">
            <TextBlock Canvas.Left="424" TextWrapping="Wrap" Text="Marketplace" Canvas.Top="58" FontSize="20" FontWeight="Bold"/>
            <TextBlock Canvas.Left="158" TextWrapping="Wrap" Text="Quis autem vel eum iure zreprehenderit qui in ea voluptate velit esse quam nihil molestiae consequatur, vel illum qui dolorem eum fugiat quo voluptas nulla pariatur" Canvas.Top="102" FontSize="16" Height="47" Width="651" Foreground="#FF787878"/>
            <Canvas Height="238" Canvas.Left="122" Canvas.Top="206" Width="170" Background="WhiteSmoke">
                <Image x:Name="Customer1_Image" Height="100" Canvas.Left="36" Canvas.Top="17" Width="100"/>
                <Label x:Name="Customer1_Name" Content="Customer1" HorizontalContentAlignment="Center" Canvas.Left="10" Canvas.Top="130" FontSize="16" Width="150" Height="32"/>
                <Label x:Name="Customer1_City" Content="Customer1" HorizontalContentAlignment="Center" Canvas.Left="10" Canvas.Top="158" FontSize="16" Width="150" Height="32"/>
                <Label x:Name="Customer1_Order_Status" Content="Customer1" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Canvas.Top="192" FontSize="16" Width="170" Height="46" Background="#FFEF466F" Foreground="White"/>
            </Canvas>


        </Canvas>

    </Canvas>

</Page>
